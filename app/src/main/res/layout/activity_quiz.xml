<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity"
    android:background="@android:color/white"
    android:layout_margin="0dp">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/textview_question_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Question"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="@color/colorLight" />

        <TextView
            android:id="@+id/textview_category"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Category"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorLight" />

        <TextView
            android:id="@+id/textview_difficulty"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Difficulty"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorLight" />

        <TextView
            android:id="@+id/textview_clock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="00:30"
            android:textSize="24dp"
            android:gravity="center"
            android:background="@color/colorLight"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_header"
        android:layout_above="@+id/radio_group_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textview_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:freezesText="true"
                android:gravity="center_horizontal"
                android:text="Here the question will be displayed. here the question will be displayed agaim"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/radio_group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_above="@+id/bottom_buttons">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Bookmarks"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/rbgroup_border"
            android:layout_marginBottom="0dp"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rbgroup_border">

            <RadioButton
                android:id="@+id/radio_btn1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:text="A"
                android:textColor="@android:color/black"
                android:buttonTint="@color/colorPrimaryDark" />

            <RadioButton
                android:id="@+id/radio_btn2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:text="B"
                android:textColor="@android:color/black"
                android:buttonTint="@color/colorPrimaryDark" />

            <RadioButton
                android:id="@+id/radio_btn3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:text="C"
                android:textColor="@android:color/black"
                android:buttonTint="@color/colorPrimaryDark" />

            <RadioButton
                android:id="@+id/radio_btn4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:text="D"
                android:textColor="@android:color/black"
                android:buttonTint="@color/colorPrimaryDark" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_prev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:layout_weight="1"
            android:text="Previous" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:layout_weight="1"
            android:text="Submit" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:layout_weight="1"
            android:text="Save &amp; Next" />
    </LinearLayout>


</RelativeLayout>